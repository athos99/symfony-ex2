{% extends 'layout.html.twig' %}

{% block style %}
    {% stylesheets
    '@AppBundle/Resources/css/style.css' %}
    <link href="{{ asset_url }}" type="text/css" rel="stylesheet"/>
    {% endstylesheets %}
{% endblock style %}


{% block navbar %}

    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    <img alt="Brand" width="20px" src="{{ asset('img/b.png') }}">
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <div class="navbar-left">
                    {{ knp_menu_render('AppBundle:Builder:mainMenu', { 'style': 'navbar' }) }}
                </div>
                <div class="navbar-right">
                    {{ render(controller('AppBundle:Search:search')) }}
                </div>
            </div><!--/.navbar-collapse -->
        </div>
    </div>

{% endblock navbar %}


{% block script %}
    <script type="text/javascript">
        $(document).ready(function () {
            var source = '<div class="entry"><h1>{{ '{{' }}title {{ '}}' }}</h1><div class="body"> {{ '{{' }} body {{ '}}' }}</div></div>';
            var template = Handlebars.compile(source);
            var context = {title: "My New Post", body: "This is my first post!"};
            var html = template(context);

        });
    </script>
{% endblock script %}