{% extends 'base.html.twig' %}



{% block content %}




    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">{{ projet.name }}
                <small>(id: {{ projet.id }})</small>
            </h3>
        </div>
        <div class="panel-body">
            {{ projet.description }}
        </div>
    </div>


    <!-- Table -->
    <table class="table table-condensed table-hover table-striped">
        <thead>
        <tr>
            <th>id</th>
            <th>cfc</th>
            <th>tache</th>
            <th>description</th>
        </tr>
        </thead>
        <tbody>
        {% for tache in projet.taches %}
            <tr>
                <th>{{ tache.id }}<span class="glyphicon glyphicon-info-sign"></span></th>
                <th data-container="body" data-placement="left" data-toggle="tooltip" title="{{ tache.cfc.description }}"
                    style="padding-left: {{ tache.cfc.lvl * 10 }}px">{{ tache.cfc.name }} </th>
                <td>{{ tache.name }}</td>
                <td>{{ tache.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
{% block script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
    </script>
{% endblock script %}
