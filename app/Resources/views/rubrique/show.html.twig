{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rubrique</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rubrique.id }}</td>
            </tr>
            <tr>
                <th>Lft</th>
                <td>{{ rubrique.lft }}</td>
            </tr>
            <tr>
                <th>Rgt</th>
                <td>{{ rubrique.rgt }}</td>
            </tr>
            <tr>
                <th>Lvl</th>
                <td>{{ rubrique.lvl }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ rubrique.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ rubrique.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ rubrique.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if rubrique.createdAt %}{{ rubrique.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if rubrique.updatedAt %}{{ rubrique.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if rubrique.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rubrique_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rubrique_edit', { 'id': rubrique.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
